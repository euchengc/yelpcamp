<%- include('../partials/header') %>

<div class="container">
    <h1 class="text-center my-5">Create a New Campground</h1>

    <div class="row">
        <div class="col-5 mx-auto">
            <div class="row">
                <div class="col">
                    <form action="/campgrounds" method="POST">
                        <div class="form-group">
                            <input class="form-control" type="text" name="name" placeholder="name">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" name="image" placeholder="image url" readonly>
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" name="description" placeholder="description">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="number" name="price" placeholder="price" min="0.01" step="0.01">
                        </div>
                        <button class="btn btn-primary btn-lg btn-block">Submit!</button>
                    </form>
                </div>
            </div>
            <div class="row my-5">
                <a href="/campgrounds">Go back</a>

            </div>

        </div>
    </div>
</div>
<%- include('../partials/footer') %>